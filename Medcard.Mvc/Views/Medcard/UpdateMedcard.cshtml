@model OwnerModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Изменить";
}
<div class="mask">
    <div class="loader">
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        let mask = document.querySelector('.mask');

        window.addEventListener('load', () => {
            setTimeout(() => {
                if (mask) {
                    mask.classList.add('hide');
                } else {
                    console.error('Element with class "mask" not found');
                }
            }, 1000); 
        });
    });
</script>

<header class="header">
    <div class="logo">
        <a href="@Url.Action("Index", "Medcard")">
            <img src="~/img/new-logo.png" alt="VetAsist">
        </a>
    </div>
    
    <button id="Add" type="submit" formmethod="post" class="btn-input">Изменить</button>
</header>

