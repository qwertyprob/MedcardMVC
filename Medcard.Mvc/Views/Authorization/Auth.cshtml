@using Medcard.Mvc.Models
@model LoginViewModel

@{
    ViewData["Title"] = "Authorization";
    Layout = "_AuthLayout";
}
<div class="mask">
    <div class="loader">
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        let mask = document.querySelector('.mask');

        window.addEventListener('load', () => {
            setTimeout(() => {
                if (mask) {
                    mask.classList.add('hide');
                } else {
                    console.error('Element with class "mask" not found');
                }
            }, 1000); 
        });
    });
</script>
<!--создание контейнера-->
<div class="container">
    <div class="row">
        <!-- заголовок и описание -->
        <div class="col-md-12">
            <h2></h2>
            <!--форма авторизации-->
            <form method="post" asp-action="Login" asp-controller="Authorization">
                <!--ввод e-mail-->
                <div class="form-group">
                    <label asp-for="Email">Электронная почта</label>
                    <input asp-for="Email" type="email" class="form-control" required />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <!--поле ввода пароля-->
                <div class="form-group">
                    <label asp-for="Password">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control" required>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <!--кнопка отправки на сервер-->
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Войти">
                </div>
            </form>

        </div>
    </div>
</div>